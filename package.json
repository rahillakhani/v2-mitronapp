{
  "name": "v2v-bike-parts-platform",
  "version": "1.0.0",
  "description": "Vendor-to-Vendor bike parts marketplace platform",
  "private": true,
  "workspaces": [
    "mobile-app",
    "admin-web"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:mobile && npm run install:admin",
    "install:mobile": "cd mobile-app && npm install",
    "install:admin": "cd admin-web && npm install",
    "dev:mobile": "cd mobile-app && expo start",
    "dev:admin": "cd admin-web && npm run dev",
    "dev:firebase": "cd firebase && firebase emulators:start",
    "build:mobile": "cd mobile-app && eas build",
    "build:admin": "cd admin-web && npm run build",
    "deploy:firebase": "cd firebase && firebase deploy",
    "deploy:admin": "cd admin-web && vercel --prod",
    "lint": "npm run lint:mobile && npm run lint:admin",
    "lint:mobile": "cd mobile-app && expo lint",
    "lint:admin": "cd admin-web && npm run lint",
    "test": "npm run test:mobile && npm run test:admin",
    "test:mobile": "cd mobile-app && npm test",
    "test:admin": "cd admin-web && npm test",
    "clean": "npm run clean:mobile && npm run clean:admin",
    "clean:mobile": "cd mobile-app && rm -rf node_modules && rm -rf .expo",
    "clean:admin": "cd admin-web && rm -rf node_modules && rm -rf .next",
    "setup": "npm run install:all && npm run setup:env",
    "setup:env": "echo 'Please copy .env.example files and configure your environment variables'",
    "docs:serve": "cd docs && python -m http.server 8080",
    "firebase:init": "cd firebase && firebase init",
    "firebase:login": "firebase login",
    "type-check": "npm run type-check:mobile && npm run type-check:admin",
    "type-check:mobile": "cd mobile-app && npm run type-check",
    "type-check:admin": "cd admin-web && npm run type-check"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/v2v-bike-parts-platform.git"
  },
  "keywords": [
    "bike-parts",
    "marketplace",
    "vendor-to-vendor",
    "react-native",
    "nextjs",
    "firebase",
    "razorpay",
    "typescript"
  ],
  "author": {
    "name": "V2V Bike Parts Team",
    "email": "team@v2vbikeparts.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.39.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run type-check",
      "pre-push": "npm run test"
    }
  }
}
